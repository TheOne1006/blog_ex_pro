doctype html
html(lang='zh-CN',ng-app='theOneBlog')
    head
      meta(charset='UTF-8')
      meta(name='viewport', content='width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no')
      title= title
      meta(name='keywords',content= keywords)
      meta(name='description',content= description)
      //- apple 全屏
      meta(name='apple-touch-fullscreen',content='yes')
      //- apple 去除工具栏
      meta(name='apple-mobile-web-app-capable',content='yes')
      meta(content='telephone=no',name='format-detection')
      meta(content='email=no',name='format-detection')
      meta(name='Author',content='theone')
      //- base(href='/')
      link(rel='stylesheet',href='/public/css/home/theoneBlog.1c41f465.css')



      script(src='/public/scripts/home/base.e95e0264.js')

    body(ng-controller='MainCtrl',ui-view='main',ng-class='{"no-scroll":view.scrollLeft}')
      header#header.navbar.navbar-default.navbar-fixed-top(ui-view='header',headroom,offset='201',classes="{pinned:'fadeInDownH',unpinned:'fadeOutUpH',initial:'animated'}",ng-class='{"header-activate":!view.scrollLeft,"fadeInDownH":view.scrollLeft}')
      div#leftSider.translate-side

      div#middelContext.translate-side(ng-class='{"scroll-left":view.scrollLeft}')
        block middelContext


        block footer
          .navbar.navbar-footer
              hr
              .container
                  .row
                      .col-lg-12
                          footer(role='conteninfo')
                              p.text-left TheOne个人笔记本
                                a(href='http://self.theone.io',title='个人简介') About me
                              p.text-right &copy; 2015 TheOne.io 版权所有 ICP证：闽ICP备14001334号-2

      div#rightSider.affix.mobile-right(ng-class='{"mobile-right-scroll":view.scrollLeft}')
        block rightSider

    //- angular
    block angular
      script(src='/angular/scripts/home/ngTheone.64cc0086.js')
